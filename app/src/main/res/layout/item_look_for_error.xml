<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/errorSearchText"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/error_seachtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:id="@+id/errorSearchSpinner"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="@drawable/error_icon"
        app:layout_constraintTop_toBottomOf="@id/errorSearchText"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/error_options"

        app:layout_constraintStart_toEndOf="@id/errorSearchSpinner"
        app:layout_constraintTop_toBottomOf="@id/errorSearchText"/>
    <ImageView
        android:layout_marginTop="24dp"
        android:id="@+id/errorSearchHouse"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/error_house"
        app:layout_constraintTop_toBottomOf="@id/errorSearchSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>